{
    "name": "baddiservices/safehtml",
    "description": "Safe HTML package help to prevent XSS vulnerability via HTML content",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "beta",
    "authors": [
        {
            "name": "5baddi",
            "email": "project@baddi.info"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "BADDIServices\\SafeHTML\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BADDIServices\\SafeHTML\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }
}
